@import "../common/index.wxss";

.weui-agree__link {
  display: inline;
  color: var(--weui-LINK);
}

.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部标题样式 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
    color: #1890ff;
    font-size: 48rpx;
    font-weight: bold;
    padding: 20rpx 0;
  }

.subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 16rpx;
  border-radius: 30rpx;
}

/* 计分板样式 */
.scoreboard {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 玩家区域样式 */
.player-section {
  flex: 1.2;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.player-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(0, 136, 255, 0.1);
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid rgba(0, 136, 255, 0.2);
}

.player-avatar text {
  color: #0088ff;
  font-size: 40rpx;
}

.player-name {
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
  background: transparent;
  border: none;
  width: 160rpx;
  min-height: unset;
}

.player-score {
  color: #333333;
  font-size: 120rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  line-height: 1;
}

/* 加减分控制器样式 */
.score-control {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.control-btn {
  width: 100%;
  height: 90rpx;
  background: rgba(0, 136, 255, 0.1);
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.control-btn text {
  font-size: 40rpx;
  color: #0088ff;
}

/* 中间信息区域样式 */
.center-info {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
}

.vs-text {
  color: #ff3b30;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.center-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-games {
  color: #666666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.games-number {
  color: #0088ff;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
  width: 120rpx;
  background: transparent;
  border: none;
  min-height: unset;
}

.center-controls {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 20rpx;
}

.center-controls .control-btn {
  width: 160rpx;
  height: 70rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  margin: 0 auto;
  transition: all 0.3s ease;
}

.center-controls .control-btn:first-child {
  background: #1890ff;
  color: white;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.center-controls .control-btn:last-child {
  background: #ff3b30;
  color: white;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 59, 48, 0.2);
}

/* 操作按钮样式 */
.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}

.action-buttons button {
  width: 45%;
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 提示文本样式 */
.hint-text {
  width: 100%;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin: 20rpx 0;
}

/* 计分按钮样式 */
.score-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.score-btn {
  width: 22%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.score-btn.minus {
  background: white;
  color: #1890ff;
}

.score-btn.foul {
  background: #ff4d4f;
  color: white;
}

.score-btn.clean {
  background: #fa8c16;
  color: white;
}

.score-btn.normal {
  background: #1890ff;
  color: white;
}

/* 底部功能按钮样式 */
.function-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.function-btn {
  width: 22%;
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 10rpx;
}

button {
  margin: 0;
  padding: 0;
  line-height: 2.2;
}

/* 底部导航栏样式 */
.bottom-nav {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.bottom-nav .action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.bottom-nav .action-buttons button {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 40rpx;
  line-height: 2;
}

/* 横屏模式样式 */
.container-landscape {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.landscape-scoreboard {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.landscape-player {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 40rpx;
  box-sizing: border-box;
}

.landscape-player.red {
  background: #fff5f5;
  border-bottom: 1rpx solid #ffeeee;
}

.landscape-player.blue {
  background: #f0f7ff;
}

.landscape-score {
  font-size: 240rpx;
  color: #333333;
  font-weight: bold;
  line-height: 1;
  transform: rotate(90deg);
}

.landscape-controls {
  position: absolute;
  right: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.landscape-btn {
  width: 90rpx;
  height: 90rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.landscape-btn text {
  font-size: 40rpx;
  color: #0088ff;
}

.landscape-btn.minus text {
  transform: rotate(90deg);
  display: block;
}

.switch-to-portrait {
  position: fixed;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%) rotate(90deg);
  background: #ffffff;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.switch-to-portrait text {
  color: #666666;
  font-size: 26rpx;
  display: block;
}

/* 删除旧的旋转图标相关样式 */
.center-controls .control-btn.rotate-hint {
  display: flex;
  justify-content: center;
  align-items: center;
}
