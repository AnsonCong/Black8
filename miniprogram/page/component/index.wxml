<!-- 根据横竖屏状态显示不同布局 -->
<view class="{{isLandscape ? 'container-landscape' : 'container'}}" data-weui-theme="{{theme}}">
  <!-- 竖屏模式 -->
  <block wx:if="{{!isLandscape}}">
    <!-- 顶部标题区域 -->
    <view class="header" style="width: 674rpx; height: 60rpx; display: block; box-sizing: border-box">
      <text>中式8球🎱记分</text>
    </view>

    <!-- 计分板区域 -->
    <view class="scoreboard" style="display: flex; box-sizing: border-box; height: 1033rpx">
      <!-- 左边球员 -->
      <view class="player-section" style="height: 799rpx; display: flex; box-sizing: border-box">
        <view class="player-avatar">
          <text>主</text>
        </view>
        <text class="player-name">主场选手</text>
        <text class="player-score">{{player1.score}}</text>
        <view class="score-control">
          <view class="control-btn add" bindtap="addScore" data-player="player1" style="height: 133rpx; display: flex; box-sizing: border-box">
            <text>+</text>
          </view>
          <view class="control-btn minus" bindtap="minusScore" data-player="player1" style="height: 133rpx; display: flex; box-sizing: border-box">
            <text>-</text>
          </view>
        </view>
      </view>

      <!-- VS标志 -->
      <view class="center-info">
        <text class="vs-text">VS</text>
        <view class="center-content">
          <text class="total-games">总局数</text>
          <input class="games-number" type="number" model:value="{{totalGames}}" bindinput="onTotalGamesChange" bindblur="onTotalGamesBlur" />
          <view class="center-controls" style="height: 205rpx; display: flex; box-sizing: border-box; width: 198rpx">
            <view class="control-btn" bindtap="switchScreen">旋转屏幕</view>
            <view class="control-btn" bindtap="resetGame" style="height: 70rpx; display: flex; box-sizing: border-box">重置</view>
          </view>
        </view>
      </view>

      <!-- 右边球员 -->
      <view class="player-section" style="height: 799rpx; display: flex; box-sizing: border-box">
        <view class="player-avatar">
          <text>客</text>
        </view>
        <text class="player-name">客场选手</text>
        <text class="player-score">{{player2.score}}</text>
        <view class="score-control">
          <view class="control-btn add" bindtap="addScore" data-player="player2" style="height: 133rpx; display: flex; box-sizing: border-box">
            <text>+</text>
          </view>
          <view class="control-btn minus" bindtap="minusScore" data-player="player2" style="height: 133rpx; display: flex; box-sizing: border-box">
            <text>-</text>
          </view>
        </view>
      </view>
    </view>
  </block>

  <!-- 横屏模式 -->
  <block wx:else>
    <view class="landscape-scoreboard">
      <!-- 上半部分（红色区域） -->
      <view class="landscape-player red">
        <text class="landscape-score">{{player1.score}}</text>
        <view class="landscape-controls">
          <view class="landscape-btn add" bindtap="addScore" data-player="player1">
            <text>+</text>
          </view>
          <view class="landscape-btn minus" bindtap="minusScore" data-player="player1">
            <text>-</text>
          </view>
        </view>
      </view>

      <!-- 下半部分（蓝色区域） -->
      <view class="landscape-player blue">
        <text class="landscape-score">{{player2.score}}</text>
        <view class="landscape-controls">
          <view class="landscape-btn add" bindtap="addScore" data-player="player2">
            <text>+</text>
          </view>
          <view class="landscape-btn minus" bindtap="minusScore" data-player="player2">
            <text>-</text>
          </view>
        </view>
      </view>

      <!-- 切换回竖屏按钮 -->
      <view class="switch-to-portrait" bindtap="switchScreen">
        <text>切换竖屏</text>
      </view>
    </view>
  </block>
</view>