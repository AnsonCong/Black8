@import "../common/index.wxss";
@import "../common/common.wxss";

.weui-agree__link {
  display: inline;
  color: var(--weui-LINK);
}

.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部标题样式 */
.header {
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  color: #1890ff;
  font-size: 48rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

/* 追分功能区域样式 */
.chase-points-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.chase-block {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.1);
  min-height: 200rpx;
}

.chase-block-large {
  min-height: 600rpx;
}

/* 玩家比分记录样式 */
.players-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  gap: 20rpx;
  width: 100%;
  flex-wrap: nowrap;
}

.player-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 1;
  min-width: 0;
  padding-bottom: 30rpx; /* 为指示器留出空间 */
}

/* 根据球友数量调整样式 */
.players-container[data-count="2"] .player-avatar {
  width: 120rpx;
  height: 120rpx;
}

.players-container[data-count="2"] .player-name {
  font-size: 32rpx;
}

.players-container[data-count="2"] .player-score {
  font-size: 64rpx;
}

.players-container[data-count="3"] .player-avatar {
  width: 100rpx;
  height: 100rpx;
}

.players-container[data-count="3"] .player-name {
  font-size: 28rpx;
}

.players-container[data-count="3"] .player-score {
  font-size: 56rpx;
}

.players-container[data-count="4"] .player-avatar {
  width: 80rpx;
  height: 80rpx;
}

.players-container[data-count="4"] .player-name {
  font-size: 24rpx;
}

.players-container[data-count="4"] .player-score {
  font-size: 48rpx;
}

.player-avatar {
  border-radius: 50%;
  background: #e6f4ff;
  border: 4rpx solid #1890ff;
  transition: all 0.3s ease;
  cursor: pointer;
}

.player-item.selected .player-avatar {
  border-color: #ff4d4f;
  box-shadow: 0 0 10rpx rgba(255, 77, 79, 0.3);
}

.player-name-container {
  position: relative;
  min-width: 120rpx;
  text-align: center;
}

.player-name.editable {
  position: relative;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.player-name.editable:hover {
  background: rgba(24, 144, 255, 0.1);
}

.player-name.editable::after {
  content: '✎';
  font-size: 24rpx;
  color: #1890ff;
  position: absolute;
  right: -24rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.player-name.editable:hover::after {
  opacity: 1;
}

.player-name-input {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  background: #ffffff;
  border: 2rpx solid #1890ff;
  border-radius: 6rpx;
  font-size: inherit;
  color: #333333;
  padding: 0 8rpx;
}

.player-score {
  color: #1890ff;
  font-weight: bold;
  transition: all 0.3s ease;
}

.vs-container {
  display: flex;
  align-items: center;
  flex-shrink: 2;
}

.vs-text {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  padding: 0 10rpx;
}

/* 添加球友按钮样式 */
.add-player-container {
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.add-player-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  background: #e6f4ff;
  color: #1890ff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.add-player-btn::after {
  border: none;
}

.add-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 控制按钮样式 */
.player-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
}

.control-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.control-btn::after {
  border: none;
}

.add-player-btn {
  background: #e6f4ff;
  color: #1890ff;
}

.remove-player-btn {
  background: #fff1f0;
  color: #ff4d4f;
}

.add-icon, .remove-icon {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 分隔线样式 */
.divider {
  width: 100%;
  height: 2rpx;
  background: #f0f0f0;
  margin: 30rpx 0;
}

/* 比赛控制按钮样式 */
.match-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx 0;
}

.match-btn {
  width: 240rpx;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.match-btn::after {
  border: none;
}

.start-btn {
  background: #52c41a;
  color: #ffffff;
}

.start-btn:active {
  background: #389e0d;
}

.end-btn {
  background: #ff4d4f;
  color: #ffffff;
}

.end-btn:active {
  background: #cf1322;
}

.reset-btn {
  background: #faad14;
  color: #ffffff;
}

.reset-btn:active {
  background: #d48806;
}

/* 禁用状态的按钮样式 */
.control-btn[disabled] {
  background: #f5f5f5 !important;
  color: #bfbfbf !important;
  opacity: 0.8;
}

.control-btn[disabled] .add-icon,
.control-btn[disabled] .remove-icon {
  color: #bfbfbf;
}

/* 加减分按钮样式 */
.score-controls {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx 0;
}

.score-row {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
}

.score-btn {
  flex: 1;
  height: 80rpx;
  min-width: 80rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.score-btn::after {
  border: none;
}

.add-btn {
  background: #e6f4ff;
  color: #1890ff;
}

.add-btn:active {
  background: #bae0ff;
}

.subtract-btn {
  background: #fff1f0;
  color: #ff4d4f;
}

.subtract-btn:active {
  background: #ffa39e;
}

/* 禁用状态的按钮样式 */
.score-btn[disabled] {
  background: #f5f5f5 !important;
  color: #bfbfbf !important;
  opacity: 0.8;
}

/* 自定义分数输入样式 */
.custom-score-btn {
  flex: 1;
  position: relative;
  height: 80rpx;
}

/* 添加可编辑按钮的特殊样式 */
.custom-edit-btn {
  position: relative;
  display: flex !important;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 4rpx 0 !important;
}

.score-text {
  font-size: 32rpx;
  line-height: 1;
  margin-top: 6rpx;
}

.edit-hint {
  font-size: 12rpx;
  opacity: 0.4;
  line-height: 1;
  margin-top: 4rpx;
  transition: opacity 0.3s ease;
}

.custom-edit-btn:active {
  opacity: 0.8;
}

.custom-edit-btn:active .edit-hint {
  opacity: 0.7;
}

/* 编辑容器样式 */
.custom-edit-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.custom-score-input {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.custom-score-input.add {
  background: #e6f4ff;
  border: 2rpx solid #1890ff;
  color: #1890ff;
}

.custom-score-input.subtract {
  background: #fff1f0;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
}

/* 输入框控制按钮样式 */
.input-controls {
  display: flex;
  gap: 8rpx;
}

.input-btn {
  flex: 1;
  height: 48rpx;
  font-size: 20rpx;
  border: none;
  border-radius: 8rpx;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-btn::after {
  border: none;
}

.confirm-btn {
  background: #52c41a;
  color: #ffffff;
}

.confirm-btn:active {
  background: #389e0d;
}

.cancel-btn {
  background: #ff4d4f;
  color: #ffffff;
}

.cancel-btn:active {
  background: #cf1322;
}

/* 添加 placeholder 样式 */
.custom-score-input::placeholder {
  font-size: 24rpx;
  color: #999;
}

/* 选中指示器样式 */
.select-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 16rpx solid #ff4d4f;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  50% {
    transform: translateX(-50%) translateY(-4rpx);
  }
}

/* 比赛未开始时的头像样式 */
.player-avatar[bindtap=""] {
  cursor: not-allowed;
  opacity: 0.8;
}
